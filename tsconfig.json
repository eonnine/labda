{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "pretty": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "/node_modules",
    "/**/*.spec.ts"
  ]
}
